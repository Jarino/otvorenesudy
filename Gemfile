source 'https://rubygems.org'

gem 'rails', '3.2.11'

# database
gem 'pg'
gem 'pg_search'

# search engine
gem 'tire'

# styles
gem 'bootstrap-sass',     '~> 2.2.2.0'
gem 'font-awesome-rails', '~> 3.1.1.2'

# scripts
gem 'coffee-script'
gem 'jquery-rails', '~> 2.2.1'
gem 'rails-timeago'
gem 'jquery-tablesorter'
gem 'execjs'

# JS libraries
gem 'inflection-js-rails'
gem 'jquery-ui-rails', '~> 3.0.1'
gem 'spinjs-rails'
gem 'rails-backbone'

# pagination
gem 'kaminari',           '~> 0.14.1'
gem 'kaminari-bootstrap', '~> 0.1.3'

# maps
gem 'gmaps4rails', '~> 1.5.6'

# localization
gem 'rails-i18n'

# crawlers
gem 'curb',        '>= 0.8.3'
gem 'mechanize',   '~> 2.5.1'
gem 'docsplit',    '~> 0.6.4'

gem 'json'
gem 'nokogiri'

# utilities
gem 'colored',     '~> 1.2'
gem 'murmurhash3', '>= 0.1.3'

gem 'htmlentities'
gem 'settingslogic'

# background jobs
gem 'resque'

# analytics
gem 'garelic'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier',     '>= 1.0.3'
  gem 'therubyracer', '~> 0.10.2'

  # deployment
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'rvm-capistrano'
  gem 'factory_girl'
end

# resque for capistrano
gem 'capistrano-resque', '~> 0.1.0'

group :development, :test do
  gem 'rspec-rails',      '~> 2.0'
  gem 'database_cleaner', '~> 0.9.1'

  gem 'jasminerice'
  gem 'guard-jasmine'
end

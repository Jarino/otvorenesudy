#= require ./search_model

class OpenCourts.JudgeSearchModel extends OpenCourts.SearchModel
  _type:  'judge'

  defaults:
    sort: ["_score"]
    <% Judge.facets.each do |name, facet| %>
    <%= "#{name}: []" %>
    <% end %>

  query: ->
    super (data) =>
      data.q = @.getQuery() if @.getQuery()?

_.extend(OpenCourts.JudgeSearchModel.prototype.defaults, OpenCourts.SearchModel.prototype.defaults)

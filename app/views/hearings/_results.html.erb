<%= search_list_tag results, offset: offset do |hearing| %>
  <li>
    <h4>
      <%= link_to_hearing hearing, hearing_headline(hearing, limit: 67) %>
      <br/>
      <small>
        Pojednávanie <%= hearing.date.past? ? "prebehlo" : "prebehne" %> dňa &ndash;
        <%= hearing_date hearing.date %>
      </small>
    </h4>

    <div class="search-result-content">
      <div class="search-result-identifiers pull-right">
          <%= tooltip_tag hearing.case_number, "Spisová značka", placement: :right %><br/>
          <%= tooltip_tag hearing.file_number, "Identifikačné číslo súdneho spisu", placement: :right %>
      </div>
      
      <% if hearing.court %>
        Súd &ndash; <%= link_to_court hearing.court %>
        <br/>
      <% end %>
      <% if hearing.judges.normal.any? %>
        <% if hearing.judges.normal.exact.any? %>
          <%= translate_without_count(hearing.judges.normal.exact.count, :judge).upcase_first %>
          &ndash; <%= links_to_judges hearing.judges.normal.exact %>
        <% else %>
          <%= translate_without_count(hearing.judges.normal.inexact.group(:judge_name_unprocessed).count.size, :judge).upcase_first %>
          &ndash; <%= judge_processed_names hearing.judges.normal.inexact %>
        <% end %>
        <br/>
      <% end %>
      <% if hearing.proposers.any? %>
        <%= translate_without_count(hearing.proposers.count, :proposer).upcase_first %> &ndash; <%= hearing.proposers.pluck(:name).to_sentence %>
        <br/>
      <% end %>
      <% if hearing.opponents.any? %>
        <%= translate_without_count(hearing.opponents.count, :opponent).upcase_first %> &ndash; <%= hearing.opponents.pluck(:name).to_sentence %>
        <br/>
      <% end %>
      <% if hearing.defendants.any? %>
        <%= translate_without_count(hearing.defendants.count, :defendant).upcase_first %> &ndash; <%= hearing.defendants.pluck(:name).to_sentence %>
        <br/>
      <% end %>

      <div class="clearfix"></div>
    </div>        
  </li>
<% end %>

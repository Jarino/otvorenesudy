<% provide :title, "Pojednávania" %>

<% content_for :scripts do %>
  <script type="text/javascript">
    $(document).ready(function() {
      window.app = new OpenCourts.Search.App({ model: OpenCourts.HearingSearchModel })
      window.app.start()
    })
  </script>
<% end %>

<section id="search-view">
  <div class="row">
    <div id="search-panel" class="span4">
      <label class="checkbox">
        <input type="checkbox" id='historical'>Zobraziť minulé pojednávania
      </label>

      <% Hearing.facets.each do |name, facet| %>
        <% if facet.visible %>
          <%= render "facets/#{facet.type}_facet", name: name %>
        <% end %>
      <% end %>
    </div>

    <div class="span8">
      <div class="row">
        <div id="search-info" class="span8"></div>
      </div>

      <div class="row">
        <div id="search-results" class="span8"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="search-pagination" class="span12"></div>
  </div>
</section>

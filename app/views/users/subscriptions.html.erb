<%= provide :title, 'Notifikácie pre nové výsledky vyhľadávania' %>

<% if @hearing_subscriptions.any? || @decree_subscriptions.any? %>
  <% if @hearing_subscriptions.any? %>
    <section class="subscriptions">
      <div class="row">
        <div class="offset2 span8">
          <%= render 'subscriptions/hearings', subscriptions: @hearing_subscriptions %>
        </div>
      </div>
    </section>
  <% end %>
  <% if @decree_subscriptions.any? %>
    <section class="subscriptions">
      <div class="row">
        <div class="offset2 span8">
          <%= render 'subscriptions/decrees', subscriptions: @decree_subscriptions %>
        </div>
      </div>
    </section>
  <% end %>
<% else %>
  <section class="subscriptions">
    <div class="row">
      <div class="offset2 span8">
        <div class="page-header">
          <h1 class="centered">
            <small><%= yield :title %></small>
          </h1>
        </div>
        
        <p class="lead centered">
          Odoberanie notifikácií si registrujete vo vyhľadávaní
        </p>
        <p class="lead centered">
          <%= link_to "Pojednávaní", search_hearings_path, class: :'btn btn-primary btn-large' %>
          alebo
          <%= link_to "Rozhodnutí", search_decrees_path, class: :'btn btn-primary btn-large' %>
        </p>
        <p class="lead centered">
          podľa aktuálnych nastavení vyhľadávania.
        </p>
      </div>
    </div>
  </section>
<% end %>

<% if @highlights.any? %>
  <div class="alert alert-info">
    <%= icon_tag :legal %>
    Pre hľadaný výraz <strong>&bdquo;<%= html_escape params[:q] %>&ldquo;</strong> sme našli
    <strong><%= number_with_translation(@highlights.count, key: :result) %></strong>.
  </div>

  <ul class="unstyled">
    <% @highlights.each do |highlight| %>
      <li>
        <span class="page"><%= icon_tag :file, label: highlight[:number], join: :append, class: :muted %></span>
        <%= link_to_decree_page @decree, highlight[:number], strip_text(highlight[:text]), query: params[:q] %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="alert alert-info">
    <%= icon_tag :frown %> Pre hľadaný výraz sa nenašli <strong>žiadne výsledky</strong>.
  </div>
<% end %>

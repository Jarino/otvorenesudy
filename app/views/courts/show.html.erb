<% provide :title, @court.name %>

<section id="profile">
  <div class="page-header">
    <h1>
      <%= @court.name %><br/>
      <small><%= @court.address %></small>
    </h1>
  </div>
  
  <% q = @court.to_gmaps4rails do |court, marker|

  marker.infowindow tooltip_tag "i'm the title", 'hello'
  marker.json({ id: @court.id })
  
  end
  
   %>

   
  <%= q %>
  
  <%= gmaps(map_options: {language: :sk, hl: :sk, region: :sk,
            container_class: :map, id: "map_court_#{@court.id}", class: :view,
            auto_adjust: true, auto_zoom: false, zoom: 16,
            raw: "{ disableDefaultUI: false }" },
            
            markers: { data: q }
            
            )
       %>
  
     
   <% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">
    Gmaps.map_court_3.callback = function() {
      if (Gmaps.map_court_3.markers.length == 1) {
        var marker = Gmaps.map_court_3.markers[0];
        var infowindow = marker.infowindow;
        infowindow.open(Gmaps.map_court_3.map, marker.serviceObject);
      }
    }
  </script>
<% end %>

  
</section>

<section id="rest">
  <div class="row">
    <div class="span12">
      <div class="tabbable">
        
        <ul class="nav nav-tabs">
          <li class="active"><a href="#info" data-toggle="tab">Informácie</a></li>
          <li><a href="#judges" data-toggle="tab">Sudcovia</a></li>
          <li><a href="#hearings" data-toggle="tab">Pojednávania</a></li>
          <li><a href="#decrees" data-toggle="tab">Rozhodnutia</a></li>
        </ul>

        <div class="tab-content">
          <div id="info" class="tab-pane active">
            <%= render 'info' %>
          </div>

          <div id="judges" class="tab-pane">
            <%= render 'judges', judges: @judges %>
          </div>

          <div id="hearings" class="tab-pane">
            <%= render 'hearings', hearings: @hearings %>
          </div>

          <div id="decrees" class="tab-pane">
            <%= render 'decrees', decrees: @decrees %>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>

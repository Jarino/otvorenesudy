<% provide :title, "Súdy Slovenskej Republiky" %>
<% provide :header, render(partial: 'header') %>

<section id="main-courts">
  <div class="row">
    <div class="span12">
      <%= render 'courts', courts: [@constitutional, @highest, @specialized] %>
    </div>
  </div>
</section>

<section id="regional-courts">
  <div class="page-header">
    <h1>Krajské súdy</h1>
  </div>

  <div class="row">
    <div class="span12">
      <%= render 'courts', courts: @regional %>
    </div>
  </div>
</section>

<section id="district-courts">
  <div class="page-header">
    <h1>Okresné súdy</h1>
  </div>

  <div class="row">
    <div class="span12">
      <%= render 'courts', courts: @district %>
    </div>
  </div>
</section>

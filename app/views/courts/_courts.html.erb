<table class="table table-striped">
  <thead>
    <tr>
      <th class="span5">Súd</th>
      <th class="span7">Adresa</th>
      <th><%= tooltip_tag "Sudcovia",     "Počet zamestnaných sudcov." %></th>
      <th><%= tooltip_tag "Pojednávania", "Počet súdnych pojednávaní." %></th>
      <th><%= tooltip_tag "Rozhodnutia",  "Počet súdnych rozhodnutí." %></th>
    </tr>
  </thead>
  <tbody>
    <% courts.each do |court| %>
      <tr>
        <td>
          <strong><%= link_to_court court %></strong>
        </td>
        <td>
          <%= court.address %>
        </td>
        <td class="number">
          <%= number_with_delimiter court.judges.count %>
        </td>
        <td class="number">
          <%= number_with_delimiter court.hearings.count %>
        </td>
        <td class="number">
          <%= number_with_delimiter court.decrees.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @court.information_center %>
  <%= render 'office', name: "Informačné centrum", office: @court.information_center %>
<% end %>

<% if @court.registry_center %>
  <%= tag :hr if @court.information_center %>
  <%= render 'office', name: "Podateľňa", office: @court.registry_center %>
<% end %>

<% if @court.business_registry_center %>
  <%= tag :hr if @court.information_center || @court.registry_center %>
  <%= render 'office', name: "Informačné stredisko obchodného registra", office: @court.business_registry_center %>
<% end %>

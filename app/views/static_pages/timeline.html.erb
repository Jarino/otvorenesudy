      <% Hearing.where("file_number = '4112010056'").order("date desc").each_with_index do |h, i| %>
        <div class="item post isotope-item <%= i % 2 != 0 ? 'left' : 'right' %>" style="position: relative;">
          <div class="inner" style="margin-top: 60px;">
            <div class="timestamp">1338156000000</div>
            <div class="title"><h3>Pojednávanie</h3></div>
            <div class="date"><%= l h.date, format: "%B, %-d." %></div>
            <div class="body">

              <div class="text">
                <dl class="dl-horizontal">
                  <dt>Sudca: </dt>
                  <dd><%= h.judgings.map { |j| j.judge.name }.join(",") %></dd>
                  <dt>Súd: </dt>
                  <dd><%= h.court.name %></dd>
                  <dt>Miestnosť: </dt>
                  <dd><%= h.room %></dd>
                  <dt>Spis. značka:</dt>
                  <dd><%= h.case_number %></dd>
                  <dt>IČS: </dt>
                  <dd><%= h.file_number %></dd>
                  <dt>Predmet:</dt>
                  <dd><%= h.subject.value %></dd>
                  <dt>Obžalovaní:</dt>
                  <dd><%= raw(h.defendants.map(&:name).join("<br>")) %></dd>
                 </dl>
               </div>

               <div class="clearfix">
                  <%= link_to "Viac informácii", '#', class: 'more' %>
              </div>
              </div>
              <div class="clearfix"></div>

<section id="links">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Prihlásiť", new_session_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrovať", new_registration_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to "Zabudli ste si heslo?", new_password_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Nedostali ste inštrukcie pre potvrdenie účtu?", new_confirmation_path(resource_name) %><br />
  <% end -%>
</section>

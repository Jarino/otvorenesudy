<% provide :title, "Obnovenie hesla" %>

<%= render "devise/shared/links" %>

<section id="user-password" class="user">
  <div class="row">
    <div class="offset2 span8">
      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
        <legend><%= yield :title %></legend>
        <p>
          <strong>Zabudli ste heslo?</strong>
        </p>
        <hr/>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: :span8 %>
        </p>
        <%= f.hidden_field :reset_password_token %>
        <button type="submit" class="btn btn-primary btn-large">Poslať inštrukcie</button>
      <% end %>
    </div>
  </div>
</section>

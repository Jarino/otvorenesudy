<%= render 'header' %>

<div class="section">
  <h4>Nastavenie vyhľadávania:</h4>
  
  <% if @subscription.query.value.any? %>
    <ul class="unstyled">
      <% @subscription.query.value.each do |name, values| %>
        <li>
          <%= t "#{@model.facets[name].key}.title" %> &ndash;
          <%= Array.wrap(values).join ', ' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      Nenastavené žiadne obmedzenia.
    </p>
  <% end %>
</div>

<div class="section">
  <h4>Nové <%= translate_without_count(:other, @type) %>:</h4>
  
  <%= render "#{@type.to_s.pluralize}" %>

  <p>  
    <%= link_to_search @type, "Zobrazit daľšie #{translate_without_count(:other, @type)}", params: @params %>
    &middot;
    <%= link_to "Zrušiť odoberianie notifikácií", subscriptions_users_url %>
  </p>
</div>

<%= render 'footer' %>

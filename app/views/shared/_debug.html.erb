<% if Rails.env.development? %>
  <% if instance = @court || @judge || @hearing || @decree %>
    <div class="container">
      <% if instance.respond_to? :uri %>
        <%= content_tag :pre, class: :debug_dump do %>
          <% ["        page link: #{link_to(instance.uri, instance.uri)}",
              "        page file: #{instance.page_path}",
              "      change time: #{File.ctime(instance.page_path) if instance.page_path}",
              " last access time: #{File.atime(instance.page_path) if instance.page_path}",
              "modification time: #{File.mtime(instance.page_path) if instance.page_path}"
              ].join("\n").html_safe %>
        <% end %>
      <% end %>
      
      <%= debug(instance) %>
      <%= debug(params) %>
    </div>
  <% end %>
<% end %>

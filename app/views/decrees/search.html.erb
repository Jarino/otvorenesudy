<% provide :title, "Vyhľadávanie v súdnych rozhodnutiach" %>
<% provide :header, render(partial: 'search/header') %>

<% render 'search/initialization.js', type: Decree %>

<section id="search-view">
  <div class="row">
    <div class="span4">
      <div data-id='q' class="input-append">
        <%= facet_input class: :'input-large', placeholder: 'Vyhľadávanie v rozhodnutiach' %>
        <button type="button" class="btn" /><%= icon_tag 'search' %></button>
      </div>
    </div>

    <div class="span6">
      <div class="pull-right">
        <select id="sort">
          <option value="_score">Relevancia</option>
          <option value="date">Dátum</option>
        </select>
      </div>
    </div>
  
    <div class="span2">
      <div class="pull-right">
        <div id="order" class="btn-group" data-toggle="buttons-radio">
          <button type="button" class="btn" data-order="desc"><%= icon_tag :'chevron-down' %></button>
          <button type="button" class="btn" data-order="asc"><%= icon_tag :'chevron-up' %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="search-panel" class="span4">
      <%= render 'facets/facets', type: Decree %> <!-- TODO try @model -->
    </div>

    <div class="span8">
      <div class="row">
        <div id="search-info" class="span8"></div>
      </div>

      <div class="row">
        <div id="search-results" class="span8"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="search-pagination" class="span12"></div>
  </div>
</section>

<% content_for :scripts do %>
  <script type="text/javascript">
    $(document).ready(function() {
      var dv = DV.DocumentViewer.init({
      container: $('.document'),
      attachments: <%== [decree_as_attachments(decree)].to_json %>,
      width: '940px',
      height: '1328px',
      annotationsAllowed: false,
      zoom: true,
      commentList: false,
      search: {
        query: "<%= params[:q] ? escape_javascript(params[:q].html_safe) : '' %>",
          callback: function(q, callback) {
            searchDecreePages(<%= decree.id %>, q, callback)
          }
        }
      });
    });
  </script>
<% end %>

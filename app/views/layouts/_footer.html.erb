<footer>
  <div class="container">
    <div class="row">
      <div class="span3">
        <h4>Otvorené Súdy <%= icon_tag :legal %></h4>
      </div>

      <div class="span3">
        <h4>Prehlásenia <%= icon_tag :'file-text-alt' %></h4>
      </div>

      <div class="span3">
        <h4>Transparentnosť <%= icon_tag :ok %></h4>
      </div>

      <div class="span3">
        <h4>Dáta <%= icon_tag :hdd %></h4>
      </div>
    </div>

    <hr/>

    <div class="row">
      <div class="span3">
        <nav>
          <ul class="nav pull-left">
            <li><%= link_to "O projekte", static_page_path(:about) %></li>
            <li><%= link_to "Často kladené otázky", static_page_path(:faq) %></li>

            <li><%= link_to "Kontakt", static_page_path(:contact) %></li>
          </ul>
        </nav>
      </div>

      <div class="span3">
        <nav>
          <ul class="nav pull-left">
            <li><%= link_to "Podmienky používania", static_page_path(:'terms-of-use') %></li>

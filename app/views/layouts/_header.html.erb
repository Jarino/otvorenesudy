      <%= search_field_tag :search, params[:search], class: 'search-query' %>
      <%= button_tag icon_tag(:search), name: nil, class: 'btn' %>
    </div>
  <% end %>
  
  <%= link_to 'Rozšírené vyhľadávanie', nil %>
</div>

<% unless @header.blank? %>
  <header class="jumbotron masthead">
    <div class="pattern">
      <div class="container">
        <h1>
          <%= @header[:title] %>
          <small><%= @header[:subtitle] %></small>
        </h1>
      </div>
    </div>
  </header>
<% end %>
